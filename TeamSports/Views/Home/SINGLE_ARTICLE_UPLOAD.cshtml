<script>
    $(document).ready(function () {
        GetDD_Data();
        $("#PUSHTODB").hide();
        Get_DB_Data();
    });


    function GetDD_Data() {
        var vType = 0;
        $.ajax({
            url: "/Home/GetDD_DATA",
            type: "POST",
            dataType: "json",
            data: {
                _type: vType
            },
            success: function (response) {
                {
                    $('select#brand_name').html('');
                    var result = '';
                    result += "<option value='1'>Select a Brand</option>";

                    if (response?.length > 0) {
                        for (var i = 0; response?.length > i; i++) {
                            result += "<option value='" + response[i].ID + "'>" + response[i].NAME + "</option>";
                        }
                    }
                    $('select#brand_name').append(result);
                }
            },
            error: function (response) {
                swal.close();

            }
        });
    }

    $("#submitBtn").click(function () {
        var vBrandID = $("#brand_name :selected").val();
        var vBrandName = $("#brand_name :selected").text();
        var vArticle = $("#article").val();
        var vEan = $("#ean").val();
        var vArticleName = $("#art_name").val();
        var vGender = $("#gender").val();
        var vColors = $("#colors").val();
        var vSize = $("#size").val();
        var vPrice = $("#price").val();
        if (vBrandID == "" && vBrandName == "" && vPrice == "" && vSixe == "" && vColors == "" && vGender == "" && vEan == "" && vArticle == "") {
            Swal.fire(
                'Successful!',
                'Give all the informations correctly!!',
                'error'
            )
        }
        else {
            var formData = new FormData();
            formData.append('_BrandID', vBrandID);
            formData.append('_BrandName', vBrandName);
            formData.append('_Price', vPrice);
            formData.append('_Size', vSize);
            formData.append('_Colors', vColors);
            formData.append('_Gender', vGender);
            formData.append('_Ean', vEan);
            formData.append('_Article', vArticle);
            formData.append('_ArticleName', vArticleName);
            swal.showLoading();
            $.ajax({
                type: "POST",
                url: "/Home/ADD_SINGLE_ARTICLE",
                data: formData,
                contentType: false,
                processData: false,
                async: true,
                success: function (response) {
                    swal.close();
                    if (response != 0) {
                        Get_DB_Data();
                    }
                },
                error: function (response) {
                    swal.close();
                }
            });
        }






    });

    function DISCARD() {


        Swal.fire({
            title: "Do you want to discard the articles?",
            icon: "question",
            showDenyButton: true,
            showCancelButton: true,
            confirmButtonText: "Yes",
            denyButtonText: `No`
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {

                $.ajax({
                    url: "/Home/DISCARD_TEMP_DB",
                    type: "POST",
                    dataType: "json",
                    data: {
                    },
                    success: function (response) {
                        {
                            swal.close();
                            Swal.fire(
                                'Successful!',
                                'File Upload Discarded!!',
                                'success'
                            )

                            setTimeout(function () {
                                window.location.reload();
                            }, 1500);
                        }
                    },
                    error: function (response) {
                    }
                });

            } else if (result.isDenied) {
                Swal.fire("Changes are not saved", "", "info");
            }
        });





    }

    function Get_DB_Data() {
        swal.showLoading();
        $.ajax({
            url: "/Home/Get_DB_DATA",
            type: "POST",
            dataType: "json",
            data: {
            },
            success: function (response) {
                {
                    swal.close();
                    console.log("Generating Data: ", response);
                    if (response?.status && response?.body?.length > 0) {
                        $("#PUSHTODB").show();
                        $("#brandName").html(response?.body[0]["BRAND"]);
                        $("#form").hide();
                        var resultBody = "";
                        var resultHead = "";
                        resultHead += "<tr>";
                        for (var i = 0; i < response?.header.length; i++) {
                            resultHead += "<td style='text-align:center;'>" + response?.header[i] + "</td>";
                        }
                        resultHead += "</tr>";

                        for (var i = 0; i < response?.body.length; i++) {
                            if (response?.body[i].ISEXIST == 1) {
                                resultBody += "<tr style='background-color:#FFE2E5 !important'>";
                            }
                            else {
                                resultBody += "<tr style='background-color:#c9f7f5 !important'>";
                            }

                            for (var j = 0; j < response?.header.length; j++) {
                                var colName = response?.header[j];
                                resultBody += "<td style='text-align:center;'>" + response?.body[i][colName] + "</td>";
                            }
                            resultBody += "</tr>";
                            resultBody += "</tr>";
                        }
                        $("#ART_WISE_DT_HEAD").empty();
                        $("#ART_WISE_DT_BODY").empty();
                        $('#ART_WISE_DT_HEAD').append(resultHead);
                        $('#ART_WISE_DT_BODY').append(resultBody);
                        swal.close();
                        new DataTable('#examples', {
                            scrollX: true
                        });

                    }
                }
            },
            error: function (response) {
                swal.close();
            }
        });
    }

    function PUSH_MAINDB() {
        swal.showLoading();
        var _brandName = $("#brandName").html();
        $.ajax({
            url: "/Home/PUSH_MAINDB",
            type: "POST",
            dataType: "json",
            data: {
                _BRAND_NAME: _brandName,
                _OP: "Keep_All"
            },
            success: function (response) {
                {
                    swal.close();
                    Swal.fire(
                        'Successful!',
                        'Article Has Been Added To The Sheet & DB',
                        'success'
                    )

                    setTimeout(function () {
                        window.location.reload();
                    }, 1500);


                }
            },
            error: function (response) {
                swal.close();
            }
        });
    }
</script>